    <body class="bg-light vh-100">
        
        <div class="container banner-inscripcion">
            <img src="{{ asset('images/banner.jpg') }}" class="img-fluid" alt="Responsive image">
        </div>
        {% if message is null %}
        <div class="container form-bloque">
            <form method="POST" action="{{path('inscription_form')}}">
                <div class="row g-3">
                    <div class="col-sm-6">
                    <label for="firstName" class="form-label">Nombre *</label>
                    <input type="text" class="form-control" name="nombre" id="nombre" placeholder="" value="" required>
                    
                    </div>
                    <div class="col-sm-6">
                    <label for="firstName" class="form-label">Email *</label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="" value="" required>
                    
                    </div>

                    <div class="col-sm-6">
                    <label for="firstName" class="form-label">CIF *</label>
                    <input type="text" class="form-control" name="cif" id="cif" placeholder="" value="" required>
                    
                    </div>
                    <div class="col-sm-6">
                    <label for="firstName" class="form-label">Teléfono *</label>
                    <input type="text" class="form-control" name="telefono" id="telefono" placeholder="" value="" required>
                    
                    </div>
                    

                    <div class="col-sm-6">
                    <label for="country" class="form-label">Provincia</label>
                    <select class="form-select" id="country" required name="provincia">
                        <option value="">Selecciona...</option>
                        {% for provincia in provincias %}
                        <option value="{{provincia.nombre}}">{{provincia.nombre}}</option>
                        {% endfor %}
                    </select>
                    
                    </div>

                    
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="save-info" required>
                        <label class="form-check-label" for="save-info">Acepto la <a href="https://www.nex.es/es/politica-privacidad.html" target="_blank">política de privacidad</a>, el <a href="https://www.nex.es/es/aviso-legal.html" target="_blank">aviso legal</a> y <a href="https://www.nex.es/es/politica-de-cookies.html" target="_blank">la política de cookies.</a></label>
                    </div>

                

                


                <!-- Submit button -->
                <button type="submit" class="btn btn-verde btn-block mb-4">Enviar</button>
            </form>
        </div>
        {% else %}  
            <div class="container">
                <div class="alert alert-success" role="alert">
                    Gracias por ponerte en contacto con NEX. Nuestro departamento comercial se pondrá en contacto contigo lo antes posible.
                </div>
            </div>
        {% endif %}


